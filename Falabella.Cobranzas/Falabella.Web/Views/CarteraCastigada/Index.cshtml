@{
    ViewBag.Title = "Reportes";
}

@section styles{
    <link rel="stylesheet" href="@Url.Content("~/Content/css/datepicker.min.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/Content/js/DataTables/dataTables.editor.min.css")" />
}

<div class="widget-box widget-color-green2">
    <div class="widget-header">
        <h5 class="widget-title">Filtros</h5>
        <div class="widget-toolbar">
            <a href="#" data-action="collapse">
                <i class="1 ace-icon fa fa-chevron-up bigger-125"></i>
            </a>
        </div>
    </div>
    <div class="widget-body">
        <div class="widget-main">
            <div class="form-horizontal" id="formBusqueda">
                <div class="form-group">
                    <div class="col-sm-4">
                        <div class="header lighter greenFalabella">
                            <label>
                                <span class="lbl"> Seleccione fecha</span>
                            </label>
                        </div>
                        <div class="col-sm-12">
                            <label for="txtFecha">Fecha</label>
                            <div class="input-group">
                                <input class="form-control date-picker" id="txtFecha" type="text" data-date-format="dd/mm/yyyy"/>
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar bigger-110"></i>
                                </span>
                            </div>
                            <label for="txtFactor">Factor de Crecimiento</label>
                            <div class="input-group">
                                <input class="form-control" id="txtFactor" type="text" placeholder="Ej. 92.25" />
                                <span class="input-group-addon">
                                    <b>%</b>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <div class="widget-box transparent">
                            <div class="widget-header widget-header-flat">
                                <h4 class="widget-title lighter">
                                    <i class="ace-icon fa fa-gavel orange"></i>
                                    Estudios
                                </h4>
                                <div class="widget-toolbar">
                                    <a href="#" data-action="collapse">
                                        <i class="ace-icon fa fa-chevron-up"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="widget-body">
                                <div class="widget-main no-padding">
                                    <table id="dtEstudios" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th class="center">
                                                    <label class="pos-rel">
                                                        <input type="checkbox" class="ace" />
                                                        <span class="lbl"></span>
                                                    </label>
                                                </th>
                                                <th>Código</th>
                                                <th class="hidden-480">Nombre</th>
                                                <th class="hidden-480">Región</th>
                                                <th class="hidden-480">Grupo</th>
                                                <th>Meta</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr/>
            <div class="wizard-actions">
                <button id="btnLimpiar" type="button" class="btn btn-danger btn-sm"><i class="ace-icon fa fa-undo bigger-110"></i> Limpiar</button>
                <button id="btnExportar" type="button" class="btn btn-success btn-sm"><i class="ace-icon fa fa-file-text bigger-110"></i> Generar Reporte</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Content/js/DataTables/datatables.min.js")"></script>
    @*<script type="text/javascript" src="@Url.Content("~/Content/js/DataTables/dataTables.editor.min.js")"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Content/js/date-time/bootstrap-datepicker.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/date-time/languages/bootstrap-datepicker.es.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/ace/ace.widget-box.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/viewsJs/carteraCastigadaReport.js")"></script>
    
    <script type="text/javascript">
        carteraCastigadaReportJs.init({
            urlExportar: '@Url.Action("GenerarReporteExcel", "CarteraCastigada")',
            urlEstudios: '@Url.Action("GetEstudios", "CarteraCastigada")',
            urlLanguage: '@Url.Content("~/Content/js/DataTables/languages/dataTables.es.json")'
        });
    </script>
}